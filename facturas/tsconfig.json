{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": "./",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": ["es2022"]
  },
  "include": ["src/**/*", "generated"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}